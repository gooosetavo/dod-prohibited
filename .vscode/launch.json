{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "DOD_LOG_LEVEL": "DEBUG"
      }
    },
    {
      "name": "Python: Generate Docs",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/generate_docs.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
    },
    {
      "name": "Python: Run Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/run_tests.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
    },
    {
      "name": "Python: UNII Client Debug",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/unii_client.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [],
    },
    {
      "name": "Python: Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "tests/",
        "-v"
      ],
    },
    {
      "name": "Python: Pytest Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "${file}",
        "-v"
      ],
    }
  ]
}